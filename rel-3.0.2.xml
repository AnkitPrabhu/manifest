<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote name="couchbase" fetch="git://github.com/couchbase/" review="review.couchbase.org" />
  <remote name="membase"   fetch="git://github.com/membase/"   review="review.couchbase.org" />

  <default remote="couchbase" revision="master" />

  <!-- couchbase-cli has only desirable changes on master -->
  <project name="couchbase-cli"           />

  <project name="couchbase-examples"      />
  <project name="couchbase-python-client" revision="couchbase-181"  />

  <!-- couchdb has only desirable changes on master -->
  <project name="couchdb"                 />

  <!-- couchdbx-app has only desirable changes on master -->
  <project name="couchdbx-app"            />

  <project name="couchstore"              />
  <project name="ep-engine"               revision="3.0.1" />

  <!-- geocouch has only desirable changes on master -->
  <project name="geocouch"                />

  <project name="healthchecker"           />

  <!-- memcached building maintenance releases from 3.0 branch -->
  <project name="memcached" remote="membase" revision="3.0"       />
  <project name="moxi"                    />

  <!-- ns_server building 3.0.0 + cherry-picked bugfixes -->
  <project name="ns_server"               revision="rel-3.0.0++"/>

  <!-- platform locked to same revision as 3.0.1; no desirable intermediate changes -->
  <project name="platform"                revision="2a6d25c5cd2b6b7ed0771e15fee941f527a284a9"/>
  <project name="sigar"                   />
  <project name="testrunner"              />

  <!-- tlm uses 3.0.0 branch -->
  <project name="tlm"                     revision="3.0.0">
    <copyfile src="GNUmakefile"    dest="GNUmakefile"    />
    <copyfile src="Makefile"       dest="Makefile"       />
    <copyfile src="CMakeLists.txt" dest="CMakeLists.txt" />
  </project>

</manifest>
