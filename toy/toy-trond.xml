<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote name="couchbase" fetch="git://github.com/couchbase/"
          review="review.couchbase.org"/>
  <remote name="membase"   fetch="git://github.com/membase/"
          review="review.couchbase.org"/>
  <remote name="trond"   fetch="git://github.com/trondn/"
          review="review.couchbase.org"/>

  <default remote="couchbase" revision="master"/>

  <project name="cbsasl" path="cmake/cbsasl" />
  <project name="couchbase-cli"/>
  <project name="couchbase-examples"/>
  <project name="couchbase-python-client" revision="couchbase-181"/>
  <project name="couchdb"/>
  <project name="couchdbx-app"/>
  <project name="couchstore"/>
  <project name="ep-engine"/>
  <project name="geocouch"/>
  <project name="healthchecker"/>
  <project name="libconflate" path="cmake/libconflate" revision="cmake" remote="trond"/>
  <project name="libmemcached" remote="membase"/>
  <project name="libvbucket" path="cmake/libvbucket" remote="trond" revision="cmake"/>
  <project name="memcached" path="cmake/memcached" remote="trond" revision="cmake" />
  <project name="moxi"/>
  <project name="ns_server" />
  <project name="platform" path="cmake/platform" />
  <project name="portsigar"/>
  <project name="sigar"/>
  <project name="testrunner"/>

  <!-- 3rdparty deps (which should not be here!) -->
  <remote name="libevent"   fetch="git://github.com/libevent/" />
  <project name="libevent" path="cmake/libevent" remote="libevent" revision="64177777165d9684bafbfa946abd126f7ebff11f"/>

  <project name="tlm" revision="cmake" remote="trond">
    <copyfile src="Makefile.top" dest="Makefile"/>
    <copyfile src="CMakeLists.txt" dest="cmake/CMakeLists.txt"/>
    <copyfile src="CMakeLists.libevent.txt" dest="cmake/libevent/CMakeLists.txt"/>
  </project>


</manifest>
